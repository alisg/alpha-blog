<h1 class = "text-center mt-4">Log In</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 text-center">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-4 mb-4 bg-light rounded",local: true) do |f| %>
                <div class="form-group row mt-3">
                    <%= f.label :email, class: "col-2 col-form-label"%><br>
                    <div class="col-10 ">
                        <%= f.email_field :email, class: "form-control shadow rounded",id: "formGroupExampleInput", placeholder: "Enter your email address"%>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :password, class: "col-2 col-form-label"%><br>
                    <div class="col-10 ">
                        <%= f.password_field :password, class: "form-control shadow rounded",id: "formGroupExampleInput", placeholder: "Enter your password"%>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <%= f.submit " Log In", class: "btn btn-outline-dark btn-lg shadow rounded" %>
                </div>
            <% end %>
        </div>
    </div>
</div>