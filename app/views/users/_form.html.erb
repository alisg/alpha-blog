<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 text-center">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow p-4 mb-4 bg-light rounded",local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username, class: "col-2 col-form-label"%><br>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded bg-navy",id: "formGroupExampleInput", placeholder: "Enter a username"%>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :email, class: "col-2 col-form-label"%><br>
                    <div class="col-10 ">
                        <%= f.email_field :email, class: "form-control shadow rounded",id: "formGroupExampleInput", placeholder: "Enter your email address"%>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :password, class: "col-2 col-form-label"%><br>
                    <div class="col-10 ">
                        <%= f.password_field :password, class: "form-control shadow rounded",id: "formGroupExampleInput", placeholder: "Choose a secure password"%>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <%= f.submit(@user.new_record? ? " Sign Up" : "Update account" , class: "btn btn-outline-dark btn-lg shadow rounded" )%>
                </div>
            <% end %>
        </div>
    </div>
</div>