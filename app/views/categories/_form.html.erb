<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-4 mb-4 bg-light rounded",local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :name, "Category name", class: "col-2 col-form-label"%><br>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded bg-navy",id: "formGroupExampleInput", placeholder: "Enter a name"%>
        </div>
    </div>
    
    <div class="form-group mt-3 row justify-content-center">
        <%= f.submit  class: "btn btn-outline-dark btn-lg" %>
    </div>
    
<% end %>